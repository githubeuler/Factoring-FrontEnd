@model ChangePasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Cambiar contraseña";
    string BaseURL = Url.Content("~/");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Factoring + Perú | @ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="@(BaseURL + "assets/plugins/plugins.bundle.css")" />
    <link rel="stylesheet" type="text/css" href="@(BaseURL + "assets/css/style.bundle.css")" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    <link rel="shortcut icon" href="@(BaseURL + "assets/images/logos/favicon.ico")" />
    <base href="@BaseURL">
</head>
<body id="kt_body" class="bg-body">
    <div class="d-flex flex-column flex-root">
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">

            <div class="d-flex flex-column flex-lg-row-fluid py-10">
                <div class="d-flex flex-center flex-column flex-column-fluid">
                    <div class="w-lg-500px p-10 p-lg-15 mx-auto">
                      
                        <form id="kt_change_password_form" class="form w-100" asp-controller="Account" asp-action="ChangePassword" method="post" novalidate="novalidate">
                            <input type="hidden" asp-for="Token" />
                            <div class="text-center mb-10">
                                <h1 class="text-dark mb-3">Cambiar Contraseña</h1>
                            </div>
                            <div class="fv-row mb-10">
                                <label class="form-label fw-bolder text-dark fs-6 mb-0">Contraseña Actual</label>
                                <div class="position-relative" data-kt-password-meter="true">
                                    <input class="form-control form-control-lg form-control-solid" type="password" asp-for="CurrentPassword" autocomplete="off" />
                                    <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                        <i class="bi bi-eye-slash fs-2"></i>
                                        <i class="bi bi-eye fs-2 d-none"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="fv-row mb-10">
                                <label class="form-label fw-bolder text-dark fs-6 mb-0">Nueva Contraseña</label>
                                <div class="position-relative" data-kt-password-meter="true">
                                    <input class="form-control form-control-lg form-control-solid" type="password" asp-for="NewPassword" autocomplete="off" />
                                    <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                        <i class="bi bi-eye-slash fs-2"></i>
                                        <i class="bi bi-eye fs-2 d-none"></i>
                                    </span>
                                   @*  <div class="fl w-50 ba b--black-10 h1">
                                        <div id="passwordMeterNew" class="h-100"></div>
                                    </div> *@
                                </div>
                            </div>
                            <div class="fv-row mb-10">
                                <label class="form-label fw-bolder text-dark fs-6 mb-0">Confirmar Contraseña</label>
                                <div class="position-relative" data-kt-password-meter="true">
                                    <input class="form-control form-control-lg form-control-solid" type="password" asp-for="ConfirmPassword" autocomplete="off" />
                                    <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                        <i class="bi bi-eye-slash fs-2"></i>
                                        <i class="bi bi-eye fs-2 d-none"></i>
                                    </span>
                                   @*  <div class="fl w-50 ba b--black-10 h1">
                                        <div id="passwordMeterConfirm" class="h-100"></div>
                                    </div> *@
                                </div>
                            </div>
                            <div class="text-center">
                                <button id="kt_change_password_submit" type="submit" class="btn btn-lg btn-primary w-100 mb-5">
                                    <span class="indicator-label">Confirmar</span>
                                    <span class="indicator-progress">Espere un momento... <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="d-flex flex-center flex-wrap fs-6 p-5 pb-0">
                    @*  <div class="d-flex flex-center fw-bold fs-6">
                    <a href="javascript:;" class="text-muted text-hover-primary px-2">Acerca de Nosotros</a>
                    <a href="javascript:;" class="text-muted text-hover-primary px-2">Soporte</a>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
    <script>var hostUrl = 'assets/';</script>
    <script src="@(BaseURL + "assets/plugins/plugins.bundle.js")"></script>
    <script src="@(BaseURL + "assets/plugins/zxcvbn.js")"></script>

    <script src="@(BaseURL + "assets/js/scripts.bundle.js")"></script>
    <script src="@(BaseURL + "assets/js/change-password.js")"></script>

</body>
</html>
