                    <div class="position-relative">
                        <span class="position-absolute top-50 translate-middle ms-6">
                            <i class="las la-filter fs-3"></i>
                        </span>
                        <input type="text" asp-for="Ruc" class="form-control form-control-solid ps-10" maxlength="11" placeholder="Buscar por RUC">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="position-relative">
                        <span class="position-absolute top-50 translate-middle ms-6">
                            <i class="las la-filter fs-3"></i>
                        </span>
                        <input type="text" asp-for="RazonSocial" class="form-control form-control-solid ps-10" maxlength="200" placeholder="Buscar por Razón Social">
                    </div>
                </div>
