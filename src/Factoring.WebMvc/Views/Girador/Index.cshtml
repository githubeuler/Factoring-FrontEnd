@using Factoring.WebMvc.Helpers;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model GiradorViewModel
@{
    ViewData["Title"] = "Bandeja Giradores";
}
<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <h2 class="fw-bolder">Listado de Registros</h2>
        </div>
        <div class="card-toolbar">
            <div class="d-flex justify-content-end p-ins" data-kt-girador-table-toolbar="base">
                <a asp-controller="Fondeador" asp-action="Registro" class="btn btn-sm btn-primary me-3">
                    <i class="las la-plus fs-3"></i> Nuevo Registro
                </a>
                @* <button id="kt_export_button" type="button" class="btn btn-sm btn-primary">Exportar Registros</button> *@

            </div>

            <div class="d-flex justify-content-end align-items-center d-none" data-kt-girador-table-toolbar="selected">
                <div class="fw-bolder me-5">
                    <span class="me-2" data-kt-girador-table-select="selected_count"></span>Seleccionados
                </div>
                <button type="button" class="btn btn-sm btn-danger p-eli" data-kt-girador-table-select="delete_selected">Eliminar Registros</button>
            </div>
        </div>
    </div>
    <div class="card-body pt-5">
        <form id="kt_search_form" class="form w-100 mt-5 mb-15 align-items-center">
            <div class="row g-9 mb-7">
